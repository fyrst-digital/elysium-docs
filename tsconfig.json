{
  "include": [
    ".vitepress/**/*.ts",
    ".vitepress/**/*.mts",
    ".vitepress/components/**/*.vue",
    ".vitepress/theme/**/*.vue",
    ".vitepress/theme/**/*.ts",
    "*.ts",
    "content/**/*.ts",
    "content/**/*.vue",
    "content/**/*.md",
  ],
  "compilerOptions": {
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "module": "es2022",
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "styled-system/css/*": ["styled-system/css/*"],
      "styled-system/recipes/*": ["styled-system/recipes/*"],
    },
    "typeRoots": ["./styled-system/types", "./types", "./node_modules/@types"],
  },
  "vueCompilerOptions": {
    "vitePressExtensions": [
      ".md"
    ]
  }
}